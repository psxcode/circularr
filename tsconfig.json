{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "esnext"
    ],
    "outDir": "build",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "declaration": true,
    "strictNullChecks": true,
    "sourceMap": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/test-helpers.ts"
  ]
}
